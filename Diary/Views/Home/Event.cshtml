@model Diary.Models.Event

@{
    ViewData["Title"] = "Event";
}

<h1>Event</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Event">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name_Event" class="control-label"></label>
                <input asp-for="Name_Event" class="form-control" />
                <span asp-validation-for="Name_Event" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Start_Date_Event" class="control-label"></label>
                <input asp-for="Start_Date_Event" class="form-control" />
                <span asp-validation-for="Start_Date_Event" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="End_Date_Event" class="control-label"></label>
                <input asp-for="End_Date_Event" class="form-control" />
                <span asp-validation-for="End_Date_Event" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

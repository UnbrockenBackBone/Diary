@model IEnumerable<Diary.Models.Employee>

@{
    ViewData["Title"] = "Show";
}
<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #E0DABB;
    }

    #text {
        text-align: center;
    }
</style>

<p id="text"><h1>Magazine</h1></p>
<html>
<head>
    <style>
        body {
            margin-top: 20px;
            color: white;
            text-align: left;
            background-color: #8DC0C9;
        }

        .main-body {
            padding: 15px;
        }

        .card {
            box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: black;
            background-clip: border-box;
            border: 0 solid rgba(0,0,0,.125);
            border-radius: 4%;
            box-shadow: 0.6em 0.6em 6px rgba(122,122,122,0.5);
        }

        .card-body {
            flex: 1 1 auto;
            min-height: 1px;
            padding: 1rem;
        }

        .gutters-sm {
            margin-right: -8px;
            margin-left: -8px;
        }

            .gutters-sm > .col, .gutters-sm > [class*=col-] {
                padding-right: 8px;
                padding-left: 8px;
            }

        .mb-3, .my-3 {
            margin-bottom: 1rem !important;
        }

        .bg-gray-300 {
            background-color: #e2e8f0;
        }

        .h-100 {
            height: 100% !important;
        }

        .shadow-none {
            box-shadow: none !important;
        }
        hr {
            background-color: white;
        }
    </style>
</head>
<body>
    @foreach (Employee item in Model)
    {
        <div class="container">
            <div class="main-body">

                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img src="@item.Photo" alt="Admin" class="rounded-circle" width="150">
                                    <div class="mt-3">
                                        <h4>Mark</h4>
                                        <p class="text-secondary mb-1">@item.Position</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Full Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @item.Fname  @item.Lname
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Department</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @item.Department
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Status</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @item.Status
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Hourly rate</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @item.Hourly_Rate
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">hours worked</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @item.Many_hours_worked
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id"> <button class="btn-dark">Delete</button></a>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                       <a asp-controller="Home" asp-action="Update" asp-route-id="@item.Id"><button class="btn-dark">Redug</button></a> 
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>




















































